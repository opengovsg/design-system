{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~theme/*": ["./src/theme/*"],
      "~/*": ["./src/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ],
  "include": ["src/**/*", ".storybook/**/*"]
}
